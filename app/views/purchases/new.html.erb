<%= form_for @purchase do |f| %>
  
  <div class="field">
  	<%= f.label :Product_codes %>
  	<%= f.text_field :codes %>
  </div>

  <div class="actions">
  	<%= f.submit "Total price" %>
  </div>

<% end %>

<% @items.each do |item| %>
  <ul>
  	<li><%=item.name %></li>
  	<li>$<%=item.price %></li>
  	<li>Code: <%=item.formatted_code %></li>
  </ul>
  <% end %>

<%= link_to "New Item", new_item_path %><br />
